<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <h3>Artist</h3>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br>
  <h3>Genre</h3>
  <%= f.label :genre_id %>
  <%= f.collection_select :genre_id, @genres, :id, :name, prompt: true %>
  <br>
  <h3>Notes</h3>
  <!-- several text input boxes for notes -->
  <label for="">Note 1:</label>
  <input name="song[note_contents][]" id="song_notes_1">
  <label for="">Note 2:</label>
  <input name="song[note_contents][]" id="song_notes_2">
  <label for="">Note 3:</label>
  <input name="song[note_contents][]" id="song_notes_3">
  <%= f.submit %>
<% end %>


